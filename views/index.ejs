<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>To Do</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous" />
  <link rel="stylesheet" href="css/styles.css" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Satisfy&display=swap" rel="stylesheet" />
</head>

<body>
  <%- include('partials/header.ejs') %>
    <main>
      <div class="card mb-3">
        <img class="card-img-top" src="https://picsum.photos/1120/180" alt="Card image cap" />
        <div class="card-body">
          <p class="card-text">
            <%= locals.TodaysMotivation %>
          </p>
          <p class="card-text"><em>Take action ğŸ‘‡</em></p>
        </div>
      </div>

      <div class="todo">

        <div class="box">
          <h2>Create your task ğŸ’¥</h2>
          <form action="/submit" method="post">
            <textarea class="text" name="task" cols="40" rows="3"
              placeholder="Improve your life , by achieving  little tasks"></textarea>
            <button type="submit" class="btn btn-outline-light">Add Task</button>
          </form>

        </div>

        <div class="box">
          <h2>Tasks âœ…</h2>
          <% if (locals.todos) { %>
           <% todos.forEach(element => { %>
          <ol>
            <input class="larger" type="checkbox" name="tasksBox" >
            <%= element %>
          </ol>
           <% }) %>
          <% } %>
        </div>

      </div>


    </main>
    <%- include('partials/footer.ejs') %>
</body>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>

</html>

